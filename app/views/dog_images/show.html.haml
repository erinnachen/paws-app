.container.dog-image-show
  .fat-border.top-margin-20.white-bg
    %h1.text-center#changeText Fetching those doggie details ...
    %hr/
    .row
      .col-md-6
        %h3.text-center Image being analyzed
        =image_tag @doggie.image,
               class: "img-responsive center-block bottom-padding-20 dog-image",
               alt: "dog placeholder",
               id: "dog-image-analyze"
      .col-md-6
        %br/
        %br/
        %br/
        %iframe{src:"//giphy.com/embed/J3ODsTxAB7U7m", width:"480", height:"304", frameBorder:"0", class:"giphy-embed", allowFullScreen: true}
    %hr/
    .statistics
      .row
        .text-center.col-md-6
          %h3 Top breeds analyzed by PAWs
          %canvas#paws-breeds{width:"600",height:"400"}
        .text-center.col-md-6
          %h3 Top breeds photographed by the Dogist
          %canvas#dogist-breeds{width:"600",height:"400"}
