.container.dog-image-report
  .col-md-12.fat-border.top-margin-20.white-bg
    %h1.text-center PAWs Report
    .status.row
      .col-md-6
        =image_tag @doggie.image,
                   class: "img-responsive center-block top-padding-20 bottom-padding-20",
                   alt: "dog placeholder"
      .col-md-6
        %h3= "Breed: #{@doggie.breeds.first.name}"
        %h3= "PAWs was #{@doggie.result}"
    %hr/
    .image-statistics.row
      %h3.text-center= "PAWs Accuracy for #{@doggie.breeds.first.name}s: #{format_percentage(@doggie.breeds.first.analyzer_accuracy)}%"
    .paws-statistics.row
      .text-center
        %canvas#buyers{width:"600",height:"400"}
      .btn.btn-lg.btn-success.text-center#chart_updater Update chart
